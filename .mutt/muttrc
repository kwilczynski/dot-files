reset all
unhook *

set realname = "Krzysztof Wilczyński"
set from     = "kw@linux.com"
set hostname = "rocinante"

alternates \
  "((kw|kwilczynski|krzysztof.wilczynski)@(linux.com|kernel.org|fsck.io))"

set quit = ask-yes

unset user_agent
unset use_domain
set use_from      = yes
set envelope_from = yes
set edit_headers  = yes
set fast_reply    = yes
set reply_to      = yes
set include       = yes
set askcc         = yes
set fcc_attach    = yes
set fcc_clear     = no

set reverse_name     = yes
set reverse_realname = yes

set postpone         = ask-yes
set abort_unmodified = ask-yes
set abort_nosubject  = no

set forward_format = "Fwd: %s"
set forward_decode = yes
set forward_quote  = yes

set mime_forward = yes

set attribution = "On %d, %n wrote:"

set mail_check     = 30
set timeout        = 300

set use_ipv6 = no

unset ssl_starttls
set ssl_force_tls = yes

set sendmail      = "msmtp"
set sendmail_wait = 0

# Disabled.  Moved to msmtp.
# set smtp_url            = "smtp://kswilczynski@smtp.gmail.com:587/"
# set smtp_pass           = ""
# Disabled.  Mutt will try all available methods,
# in order from most-secure to least-secure.
# set smtp_authenticators = "login"
# Disabled.  Moved to msmtp.
# set smtp_authenticators = ""

set imap_passive          = no
set imap_keepalive        = 300
set imap_check_subscribed = no
set imap_user             = "kswilczynski@gmail.com"
set imap_pass             = ""
# Disabled.  Mutt will try all available methods,
# in order from most-secure to least-secure.
# set imap_authenticators   = "login"
set imap_authenticators   = ""

set folder    = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set mbox      = "+[Gmail]/All Mail"
unset record
# Waring!  Causes duplicates in GMail.
set record    = "+[Gmail]/Sent Mail"
set postponed = "+[Gmail]/Drafts"
set trash     = "+[Gmail]/Bin"

set move = no
set copy = yes

set mark_old        = no
set collapse_unread = no

set header_cache     = "~/.mutt/cache/headers"
set message_cachedir = "~/.mutt/cache/bodies"
set certificate_file = "~/.mutt/certificates"

set sleep_time = 0

set auto_tag = yes

set sort               = "threads"
set sort_thread_groups = "last-date-received"
set sort_aux           = "reverse-last-date-received"

set strict_threads    = no
set duplicate_threads = yes

set uncollapse_jump = yes

auto_view "text/html"

alternative_order \
  "text/plain"    \
  "text/enriched" \
  "text/html"     \
  "*"

bind index gg first-entry
bind index G last-entry
bind index <tab> sync-mailbox
bind index <space> collapse-thread
bind index "^" imap-fetch-mail

unset markers
set smart_wrap        = yes
set pager_stop        = yes
set pager_index_lines = 10
set pager_context     = 3
bind pager gg top
bind pager G bottom
bind pager R group-reply
bind pager k previous-line
bind pager j next-line

set editor = "vim -c 'set syntax=mail filetype=mail'"
bind editor ^T complete
bind editor <tab> complete-query
bind editor <space> noop

set rfc2047_parameters = yes

set charset         = "utf-8"
set assumed_charset = "utf-8"
set send_charset    = "utf-8"

set date_format  = "%y-%m-%d %T"
set index_format = "%2C | %Z [%d] %-30.30F (%-4.4c) %s"

set wait_key = no
set tilde    = yes

set menu_scroll = yes

ignore \
  "Authentication-Results:" \
  "DomainKey-Signature:"    \
  "DKIM-Signature:"

ignore "*"
unignore \
  "From" \
  "To"   \
  "Cc"   \
  "Bcc"  \
  "Date" \
  "Subject"

unhdr_order "*"
hdr_order \
  "From:" \
  "To:"   \
  "Cc:"   \
  "Bcc:"  \
  "Date:" \
  "Subject:"

macro compose <esc>1 "<esc>f^UKrzysztof Wilczyński <kw@linux.com><enter>"
macro compose <esc>2 "<esc>f^UKrzysztof Wilczyński <kwilczynski@kernel.org><enter>"

macro index,pager ! "<save-message>=[Gmail]/Spam<enter><enter>"      "Report as Spam"
macro index,pager + "<save-message>=[Gmail]/Important<enter><enter>" "Mark as Important"
macro index,pager e "<save-message>=[Gmail]/All Mail<enter><enter>"  "Archive Message"
macro index,pager d "<save-message>=[Gmail]/Bin<enter><enter>"       "Delete Message"

macro index,pager gi "<change-folder>=INBOX<enter>"             "Go to Inbox"
macro index,pager ga "<change-folder>=[Gmail]/All Mail<enter>"  "Go to All Mail"
macro index,pager gs "<change-folder>=[Gmail]/Sent Mail<enter>" "Go to Sent"
macro index,pager gd "<change-folder>=[Gmail]/Drafts<enter>"    "Go to Drafts"
macro index,pager gS "<change-folder>=[Gmail]/Starred<enter>"   "Go to Starred"

send2-hook "~e kwilczynski@kernel.org" "set sendmail = 'msmtp -a kernel'"

source ~/.mutt/dracula.muttrc
